                        </svg>

                    </div>

                    <div class="userMoney">
                        <p style="font-family: 'Black Ops One', serif; color:#fff; font-size: 0.8rem;">Dostępne środki</p>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <p style="font-family: 'Black Ops One', serif; color: #fff; font-size: 1rem; ">
                                @Model.User.Money <span style="color: #FFE500;">ZŁ</span>
                            </p>

                          }else {
                    <p style="font-family: 'Black Ops One', serif; color: #fff; font-size: 1rem; "> 0<span style="color: #FFE500;">ZŁ</span></p>
                    }
                            
                        </div>

                </div>
           
            <div class="userAccount">
                <div class="userName">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p>Witaj, @Model.UserName</p>
                    }
                    else
                    {
                        <a href="/login/login" style="color: #000; text-decoration: none;">Zaloguj/</a>
                        <a href="/register/register" style="color: #000; text-decoration: none;">Zarejestruj</a>
                    }

                </div>
                <div class="userLoginIco">
                    <svg width="46" height="46" viewBox="0 0 46 46" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M23.0002 19.1667C25.2062 19.1667 26.8335 17.5413 26.8335 15.3333C26.8335 13.1253 25.2062 11.5 23.0002 11.5C20.796 11.5 19.1668 13.1253 19.1668 15.3333C19.1668 17.5413 20.796 19.1667 23.0002 19.1667ZM23.0002 21.0833C18.7662 21.0833 15.3335 24.173 15.3335 27.9833V28.7232H30.6668V27.9833C30.6668 24.173 27.2341 21.0833 23.0002 21.0833Z" fill="black" />
