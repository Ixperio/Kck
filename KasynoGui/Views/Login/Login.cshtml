@using KasynoGui.Models
@model LoginViewModel
@{
    ViewBag.Title = "Zaloguj";
    ViewBag.Style = @Url.Content("~/Content/Login.css");
}

<style>
    .cont2{
        padding: 0;
        display: grid;
        grid-template-columns: 40% 60%;
        grid-template-areas: "form photo";
    }
    .contLogin {
        height: 100%;
        display: grid;
        place-content: center;
        width: 100%;
        background-color: #000;
        grid-area: form;
    }
    .contLogin > form {
        color: #fff;
        font-family: 'Pirata One';
        font-size: 1.2em;
        padding: 30px;
        display: grid;
        grid-template-columns: 1fr;
        grid-row-gap: 20px;
        place-content: center;
        place-items: center;
        width: max-content;
    }

    .contLogin > form > div {
        padding-top: 10px;
        padding-bottom: 10px;
    }

    .contLogin > form > h4 {
        font-size: 2.5em;
    }

    .contLogin > form > p > a {
        text-decoration: none;
        color: #fff;
    }

    .contLogin > form > p > a:hover {
        color: #fff;
    }

    .contLogin > form > .line {
        background-color: #fff;
        height: 1px;
        width: 100%;
        content: '';
        padding: 0;
    }
        .contLogin > form > .buttonsubmit {
            padding: 10px 60px 10px 60px;
            background-color: #52AB33;
            color: #fff;
            display: grid;
            border-radius: 100px;
            border: none;
            outline: none;
            transition: 0.12s;
        }
    .contLogin > form > .buttonsubmit:hover {
        background-color: green;
        transition: 0.23s;
    }
        .contLogin > form > div > div > .textbox {
            background-color: #1D1D1D;
            outline: none;
            height: 40px;
            width: 250px;
            border-radius: 20px;
            border: none;
            padding: 5px 15px 5px 15px;
            color: #fff;
            font-family: 'Roboto';
            font-size: 0.7em;
        }
        .contLogin > form > div > div > .text-danger {
            width: 250px;
            line-break: auto;
            text-align: center;
            margin-top: 10px;
        }
    .contLogin > form > div > .label {
        padding-left: 20px;
    }
    .contPhoto {
        background-image: url( @Url.Content("~/Content/Login/loginBack.png") );
        background-position: center;
        background-size: cover;
        display: grid;
        justify-content: left;
        padding: 0;
        margin: 0;
        grid-template-columns: 45%;
        width: 100%;
        height: 100%;
        grid-area: photo;
    }
    .contPhoto > .dark{
        background: linear-gradient(90deg,rgba(0,0,0,1), rgba(0,0,0,0));
        content: "";
    }
</style>
<div class="contLogin">
    @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Logowanie</h4>
        <div class="line"></div>

        <div>
            @Html.LabelFor(m => m.Email, new { @class = "label" })
            <div style="grid-template-columns: 1fr; display: grid; width: 100%;">
                @Html.TextBoxFor(m => m.Email, new { @class = "textbox" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            @Html.LabelFor(m => m.Password, new { @class = "label" })
            <div style="grid-template-columns: 1fr; display: grid; width: 100%;">
                @Html.PasswordFor(m => m.Password, new { @class = "textbox" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="submit" value="Zaloguj" class="buttonsubmit" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="line"></div>
        <p>
            @Html.ActionLink("Zarejestruj się jako nowy użytkownik", "Register")
        </p>

    }

</div>
<div class="contPhoto">
    <div class="dark"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}